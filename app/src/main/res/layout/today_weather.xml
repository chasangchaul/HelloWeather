<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-10"
        android:id="@+id/txtTemperature"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="oC"
        android:id="@+id/txtUnit"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtTemperature"
        android:layout_toEndOf="@+id/txtTemperature"
        android:layout_alignParentBottom="false"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sky is clear."
        android:id="@+id/txtDesc"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/txtUnit"
        android:layout_toEndOf="@+id/txtUnit"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind : 1.33 km/h, Humidity: 70%"
        android:id="@+id/txtDetail"
        android:textSize="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtTemperature" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 Nov. 2015"
        android:id="@+id/txtDate"
        android:textSize="15dp"
        android:layout_below="@+id/txtDetail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>